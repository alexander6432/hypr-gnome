  /////////////
 /// INPUT ///
/////////////

input {

    keyboard {
        xkb {
            layout "es"
        }
        repeat-delay 600
        repeat-rate 25
    }

    touchpad {
        // off
        accel-speed 0.0
        accel-profile "adaptive"
        tap
        scroll-method "two-finger"
        dwt
        disabled-on-external-mouse
        drag true
    }

    mouse {
        // off
        accel-speed 0.0
        accel-profile "adaptive"
    }

    trackpoint {
        off
    }

    trackball {
        off
    }

    warp-mouse-to-focus mode="center-xy"

    focus-follows-mouse

    // workspace-auto-back-and-forth

    mod-key "Super"

    mod-key-nested "Alt"

}

  //////////////
 /// OUTPUT ///
//////////////

output "eDP-1" {

    // off

    mode "1366x768@60.003"

    scale 1

    transform "normal"

    position x=0 y=0

    focus-at-startup

    background-color "#aaaaaa"

    backdrop-color "#004444"
}

  //////////////
 /// LAYOUT ///
//////////////

layout {

    gaps 8

    center-focused-column "never"

    // empty-workspace-above-first

    default-column-display "normal"

    preset-column-widths {
        proportion 0.33
        proportion 0.49
        proportion 0.66
    }

    default-column-width {}

    preset-window-heights {
        proportion 0.33
        proportion 0.49
        proportion 0.66
        proportion 1.00
    }

    focus-ring {
        off
        width 4
        active-gradient from="#80c8ff" to="#c7ff7f" angle=45 relative-to="workspace-view"
        inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }

    border {
        // off
        width 2
        active-gradient from="#e5989b" to="#ffb4a2" angle=45 // relative-to="workspace-view" in="oklch longer hue"
        inactive-gradient from="#505050" to="#808080" angle=45 // relative-to="workspace-view"
        urgent-gradient from="#9b0000" to="#ff0000" angle=45
    }

    shadow {
        on
        softness 32
        spread 8
        offset x=4 y=4
        draw-behind-window true
        color "#000000"
    }

    tab-indicator {
        // off
        // hide-when-single-tab
        // place-within-column
        gap 4
        width 4
        length total-proportion=0.5
        position "left"
        gaps-between-tabs 4
        corner-radius 4
        active-gradient from="#e5989b" to="#ffb4a2" angle=0
        inactive-gradient from="#505050" to="#808080" angle=0
        urgent-gradient from="#9b0000" to="#ff0000" angle=0
    }

    insert-hint {
        // off
        gradient from="#ffbb6680" to="#ffc88080" angle=45 relative-to="workspace-view"
    }

    struts {
        left 4
        right 4
        top 4
        bottom 4
    }

    background-color "#003300"
}

  ////////////////////////
 /// NAMED WORKSPACES ///
////////////////////////

// workspace "default" {
